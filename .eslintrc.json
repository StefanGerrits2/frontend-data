{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "rules": {
        "semi": "error",
        "quotes": ["error", "single"],
        "indent": [2, 4],
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
        "comma-style": ["error", "last"],
        "comma-spacing": ["error", { "before": false, "after": true }]
    }
}